@{
    ViewData["MetaTitle"] = "Francesco Bonizzi | Curriculum Vitae";
    @model fbonizziDotIt.ViewModels.CurriculumVitaeViewModel
}

<h2>@Model.CurriculumVitae.Headline</h2>

<span>@Model.CurriculumVitae.CurrentPosition</span>

<span>@Model.CurriculumVitae.Address</span>
<span><a href="mailto:@Model.CurriculumVitae.Email"></a></span>
<span>@Model.CurriculumVitae.BirthDate.ToString("yyyy-MM-dd", Model.Culture)</span>

<span>Experience</span>
<ul>
    @foreach (var workingExperience in Model.CurriculumVitae.Experiences)
    {
        <li>@Model.GetExperienceDescription(workingExperience)</li>
    }
</ul>

<span>Education</span>
<ul>
    @foreach (var educationInfo in Model.CurriculumVitae.Education)
    {
        <li>@Model.GetExperienceDescription(educationInfo)</li>
    }
</ul>

<span>Skills</span>
<ul>
    @foreach (var skill in Model.CurriculumVitae.Skills)
    {
        <li>@skill</li>
    }
</ul>

<span>Projects</span>
<ul>
    @foreach (var project in Model.CurriculumVitae.Projects.OrderBy(p => p.Title))
    {
        <li><a href="@project.Url" title="@project.Title">@project.Title</a></li>
    }
</ul>

<span>Hobbies</span>
<ul>
    @foreach (var hobby in Model.CurriculumVitae.Hobbies)
    {
        <li>@hobby</li>
    }
</ul>